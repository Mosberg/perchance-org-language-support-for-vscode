{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Perchance",
  "scopeName": "source.perchance",
  "fileTypes": ["perchance", "per", "prch"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#specialListNames" },
    { "include": "#metaListHeader" },
    { "include": "#blockName" },
    { "include": "#functionHeader" },
    { "include": "#listShorthand" },
    { "include": "#metaDirective" },
    { "include": "#metaInline" },
    { "include": "#propertyFunction" },
    { "include": "#propertyAssignment" },
    { "include": "#specialConstructs" },
    { "include": "#pluginImport" },
    { "include": "#dynamicOdds" },
    { "include": "#randomChoice" },
    { "include": "#variableDefinition" },
    { "include": "#listReference" },
    { "include": "#inlineExpr" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.perchance", "match": "//.*$" },
        { "name": "comment.block.perchance", "begin": "/\\*", "end": "\\*/" }
      ]
    },
    "specialListNames": {
      "patterns": [
        {
          "name": "entity.name.section.perchance",
          "match": "^\\s*(\\$meta|settings|userInputs|imageOptions|imageButtons|defaultCommentOptions|commentChannels|galleryOptions)\\s*$"
        }
      ]
    },
    "metaListHeader": {
      "patterns": [
        {
          "name": "entity.name.section.perchance",
          "match": "^\\s*(meta:[A-Za-z_][\\w-]*)\\s*$"
        }
      ]
    },
    "blockName": {
      "patterns": [
        {
          "name": "entity.name.section.perchance",
          "match": "^\\s*([A-Za-z_][\\w-]*|\\$[A-Za-z_][\\w-]*)\\s*$"
        }
      ]
    },
    "functionHeader": {
      "patterns": [
        {
          "name": "entity.name.function.perchance",
          "match": "^\\s*(async\\s+)?([A-Za-z_][\\w-]*)\\s*\\([^)]*\\)\\s*=>\\s*$",
          "captures": {
            "1": { "name": "keyword.control.perchance" },
            "2": { "name": "entity.name.function.perchance" }
          }
        }
      ]
    },
    "listShorthand": {
      "patterns": [
        {
          "name": "meta.list.shorthand.perchance",
          "match": "^\\s*([A-Za-z_][\\w-]*|\\$[A-Za-z_][\\w-]*)\\s*(=)",
          "captures": {
            "1": { "name": "entity.name.section.perchance" },
            "2": { "name": "keyword.operator.assignment.perchance" }
          }
        }
      ]
    },
    "metaDirective": {
      "patterns": [
        {
          "name": "meta.directive.perchance",
          "match": "^\\s*(meta:[A-Za-z_][\\w-]*)\\s*(=|:)",
          "captures": {
            "1": { "name": "variable.other.key.perchance" },
            "2": { "name": "keyword.operator.assignment.perchance" }
          }
        }
      ]
    },
    "metaInline": {
      "patterns": [
        {
          "name": "variable.other.key.perchance",
          "match": "\\bmeta:[A-Za-z_][\\w-]*\\b"
        }
      ]
    },
    "propertyFunction": {
      "patterns": [
        {
          "name": "meta.property.function.perchance",
          "match": "^\\s+(async\\s+)?([A-Za-z_][\\w-]*)\\s*\\([^)]*\\)\\s*=>",
          "captures": {
            "1": { "name": "keyword.control.perchance" },
            "2": { "name": "entity.name.function.perchance" }
          }
        }
      ]
    },
    "propertyAssignment": {
      "patterns": [
        {
          "name": "meta.property.assignment.perchance",
          "match": "^\\s+([A-Za-z_][\\w-]*|meta:[A-Za-z_][\\w-]*)\\s*(=|:)",
          "captures": {
            "1": { "name": "variable.other.key.perchance" },
            "2": { "name": "keyword.operator.assignment.perchance" }
          }
        }
      ]
    },
    "specialConstructs": {
      "patterns": [
        {
          "name": "constant.character.escape.perchance",
          "match": "\\{\\|\\}"
        },
        {
          "name": "constant.character.escape.perchance",
          "match": "<<<[^>]+>>>"
        }
      ]
    },
    "pluginImport": {
      "patterns": [
        {
          "name": "meta.import.perchance",
          "match": "\\{\\s*import:([^}]+)\\}",
          "captures": {
            "1": { "name": "string.unquoted.perchance" }
          }
        }
      ]
    },
    "dynamicOdds": {
      "patterns": [
        {
          "name": "meta.dynamic-odds.perchance",
          "match": "\\^\\[[^\\]]*\\]"
        }
      ]
    },
    "randomChoice": {
      "patterns": [
        {
          "name": "meta.random-choice.perchance",
          "begin": "\\{",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.choice.begin.perchance" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.definition.choice.end.perchance" }
          },
          "patterns": [
            {
              "name": "punctuation.separator.choice.perchance",
              "match": "\\|"
            },
            {
              "name": "keyword.operator.perchance",
              "match": "(?<=^|\\|)\\s*\\d+%"
            },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#listReference" },
            { "include": "#inlineExpr" }
          ]
        }
      ]
    },
    "variableDefinition": {
      "patterns": [
        {
          "name": "meta.variable-definition.perchance",
          "begin": "\\[([A-Za-z_][A-Za-z0-9_]*)\\s*:",
          "beginCaptures": {
            "1": { "name": "variable.other.definition.perchance" }
          },
          "end": "\\]",
          "endCaptures": {
            "0": { "name": "punctuation.definition.variable.end.perchance" }
          },
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#randomChoice" },
            { "include": "#listReference" }
          ]
        }
      ]
    },
    "listReference": {
      "patterns": [
        {
          "name": "variable.other.reference.perchance",
          "match": "\\[\\[([A-Za-z_][A-Za-z0-9_]*)\\]\\]"
        }
      ]
    },
    "inlineExpr": {
      "patterns": [
        {
          "name": "meta.inline-expr.perchance",
          "begin": "\\[",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.inline.begin.perchance" }
          },
          "end": "\\]",
          "endCaptures": {
            "0": { "name": "punctuation.definition.inline.end.perchance" }
          },
          "patterns": [
            {
              "name": "keyword.operator.perchance",
              "match": "==|!=|<=|>=|=|<|>|\\?|:"
            },
            { "include": "#builtins" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#listReference" },
            { "include": "#keywords" }
          ]
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "variable.language.perchance",
          "match": "\\b(input|settings|this|root|window|globalThis|localStorage)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.perchance",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.perchance",
              "match": "\\\\([\\\\\"'ntrfbv]|u[0-9A-Fa-f]{4})"
            }
          ]
        },
        {
          "name": "string.quoted.single.perchance",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.perchance",
              "match": "\\\\([\\\\\"'ntrfbv]|u[0-9A-Fa-f]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.perchance",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.perchance",
          "match": "\\b(if|else|for|while|return|async|await)\\b"
        },
        {
          "name": "constant.language.perchance",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    }
  }
}

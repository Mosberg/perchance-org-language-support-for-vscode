{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Perchance",
  "scopeName": "source.perchance",
  "fileTypes": ["per", "perchance"],
  "patterns": [
    {
      "name": "comment.line.double-slash.perchance",
      "match": "//.*$"
    },
    {
      "name": "meta.random-choice.perchance",
      "begin": "\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.choice.begin.perchance" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.definition.choice.end.perchance" }
      },
      "patterns": [
        {
          "name": "punctuation.separator.choice.perchance",
          "match": "\\|"
        },
        {
          "include": "#strings"
        },
        {
          "include": "#numbers"
        },
        {
          "include": "#variables"
        }
      ]
    },
    {
      "name": "meta.variable-definition.perchance",
      "begin": "\\[([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
      "beginCaptures": {
        "1": { "name": "variable.other.definition.perchance" }
      },
      "end": "\\]",
      "endCaptures": {
        "0": { "name": "punctuation.definition.variable.end.perchance" }
      },
      "patterns": [
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#randomChoice" }
      ]
    },
    {
      "name": "variable.other.reference.perchance",
      "match": "\\[\\[([a-zA-Z_][a-zA-Z0-9_]*)\\]\\]"
    },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" }
  ],
  "repository": {
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.perchance",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.perchance",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.perchance",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.perchance",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.perchance",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.perchance",
          "match": "\\b(if|else|for|while|return)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.reference.perchance",
          "match": "\\[\\[([a-zA-Z_][a-zA-Z0-9_]*)\\]\\]"
        }
      ]
    },
    "randomChoice": {
      "patterns": [
        {
          "name": "meta.random-choice.perchance",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "name": "punctuation.separator.choice.perchance",
              "match": "\\|"
            },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#variables" }
          ]
        }
      ]
    }
  },
  "uuid": "b1f8a6b0-5678-4c9a-9f0b-fedcba987654"
}
